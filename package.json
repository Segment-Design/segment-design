{
  "name": "segmentdesign",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -n segmentdesign,sigma -c green,yellow 'npm run dev:js' 'npm run dev:rust'",
    "dev:js": "npm run build:js -- --watch",
    "dev:rust": "npm run --prefix ./sigma dev:node",
    "build": "npm run build:rust && npm run build:js && npm run build:peers",
    "build:rust": "npm run --prefix ./sigma build:node",
    "build:peers": "esbuild lib/cli-peer-dependencies.js --bundle --platform=node --outfile=peers/index.js --define:process.env.CSS_TRANSFORMER_WASM=false",
    "build:js": "npm run generate:plugin-list && swc src --out-dir lib --copy-files --delete-dir-on-start --config jsc.transform.optimizer.globals.vars.__OXIDE__='\"true\"'",
    "generate:plugin-list": "node -r @swc/register scripts/create-plugin-list.js",
    "test": "jest",
    "test:integrations": "npm run test -w ./integrations",
    "prepublishOnly": "npm install --force && npm run build && npm run generate:types",
    "generate:types": "node -r @swc/register scripts/generate-types.js",
    "style": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Segment-Design/segment-design.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Segment-Design/segment-design/issues"
  },
  "homepage": "https://github.com/Segment-Design/segment-design#readme",
  "devDependencies": {
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.2",
    "@swc/jest": "^0.2.36",
    "@swc/register": "^0.1.10",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.5",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-diff": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "source-map-js": "^1.0.2",
    "turbo": "^1.12.4"
  },
  "dependencies": {
    "@alloc/quick-lru": "^5.2.0",
    "arg": "^5.0.2",
    "browserslist": "^4.23.0",
    "chokidar": "^3.6.0",
    "didyoumean": "^1.2.2",
    "dlv": "^1.1.3",
    "fast-glob": "^3.3.2",
    "glob-parent": "^6.0.2",
    "is-glob": "^4.0.3",
    "jiti": "^1.21.0",
    "lightningcss": "^1.24.0",
    "lilconfig": "^3.1.1",
    "micromatch": "^4.0.5",
    "normalize-path": "^3.0.0",
    "object-hash": "^3.0.0",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.1",
    "postcss-js": "^4.0.1",
    "postcss-load-config": "^5.0.3",
    "postcss-nested": "^6.0.1",
    "postcss-selector-parser": "^6.0.15",
    "resolve": "^1.22.8",
    "sucrase": "^3.35.0",
    "@segmentdesign/segmentize": "file:segmentize/crates/node"
  },
  "bin": {
    "segmentdesign": "lib/cli.js",
    "segmentdesign-web": "lib/cli.js"
  },
  "workspaces": [
    "build-types/web/*",
    "segmentize/crates/node"
  ],
  "segmentdesign": {
    "engine": "segmentize"
  },
  "files": [
    "src/*",
    "cli/*",
    "lib/*",
    "peers/*",
    "scripts/*.js",
    "stubs/*",
    "nesting/*",
    "types/**/*",
    "*.d.ts",
    "*.css",
    "*.js"
  ],
  "browserslist": [
    "> 1%",
    "not edge <= 18",
    "not ie 11",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testTimeout": 30000,
    "globalSetup": "<rootDir>/tests/jest/global-setup.js",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest/customMatchers.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build-types/",
      "\\.test\\.skip\\.js$"
    ],
    "transform": {
      "\\.js$": "@swc/jest",
      "\\.ts$": "@swc/jest"
    }
  }
}
