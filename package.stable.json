{
  "name": "segmentdesign",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Segment-Design/segment-design.git"
  },
  "bugs": {
    "url": "https://github.com/Segment-Design/segment-design/issues"
  },
  "homepage": "https://github.com/Segment-Design/segment-design#readme",
  "bin": {
    "segmentdesign": "lib/cli.js",
    "segmentdesignweb": "lib/cli.js"
  },
  "segmentdesign": {
    "engine": "stable"
  },
  "scripts": {
    "prebuild": "npm run generate && rimraf lib",
    "build": "swc src --out-dir lib --copy-files --config jsc.transform.optimizer.globals.vars.__SIGMA__='\"false\"'",
    "postbuild": "esbuild lib/src/cli-peer-dependencies.js --bundle --platform=node --outfile=peers/index.js --define:process.env.CSS_TRANSFORMER_WASM=false",
    "rebuild-fixtures": "npm run build && node -r @swc/register build-scripts/rebuildFixtures.js",
    "style": "eslint .",
    "pretest": "npm run generate",
    "test": "jest",
    "test:integrations": "npm run test --prefix ./build-system",
    "install:integrations": "node build-scripts/install-integrations.js",
    "generate:plugin-list": "node -r @swc/register build-scripts/create-plugin-list.js",
    "generate:types": "node -r @swc/register build-scripts/generate-types.js",
    "generate": "npm run generate:plugin-list && npm run generate:types",
    "release-channel": "node ./build-scripts/release-channel.js",
    "release-notes": "node ./build-scripts/release-notes.js",
    "prepublishOnly": "npm install --force && npm run build"
  },
  "files": [
    "src/*",
    "cli/*",
    "lib/*",
    "peers/*",
    "build-scripts/*.js",
    "stubs/*",
    "nesting/*",
    "types/**/*",
    "*.d.ts",
    "*.css",
    "*.js"
  ],
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.55",
    "@swc/jest": "^0.2.26",
    "@swc/register": "^0.1.10",
    "autoprefixer": "^10.4.14",
    "browserslist": "^4.21.5",
    "concurrently": "^8.0.1",
    "cssnano": "^6.0.0",
    "esbuild": "^0.17.18",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.6.0",
    "jest-diff": "^29.6.0",
    "lightningcss": "1.18.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "source-map-js": "^1.0.2",
    "turbo": "^1.9.3"
  },
  "dependencies": {
    "@alloc/quick-lru": "^5.2.0",
    "arg": "^5.0.2",
    "chokidar": "^3.5.3",
    "didyoumean": "^1.2.2",
    "dlv": "^1.1.3",
    "fast-glob": "^3.3.0",
    "glob-parent": "^6.0.2",
    "is-glob": "^4.0.3",
    "jiti": "^1.19.1",
    "lilconfig": "^2.1.0",
    "micromatch": "^4.0.5",
    "normalize-path": "^3.0.0",
    "object-hash": "^3.0.0",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.23",
    "postcss-import": "^15.1.0",
    "postcss-js": "^4.0.1",
    "postcss-load-config": "^4.0.1",
    "postcss-nested": "^6.0.1",
    "postcss-selector-parser": "^6.0.11",
    "resolve": "^1.22.2",
    "sucrase": "^3.32.0"
  },
  "browserslist": ["> 1%", "not edge <= 18", "not ie 11", "not op_mini all"],
  "jest": {
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/jest/customMatchers.js"],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build-system/",
      "/standalone-cli/",
      "\\.test\\.skip\\.js$"
    ],
    "transformIgnorePatterns": ["node_modules/(?!lightningcss)"],
    "transform": {
      "\\.js$": "@swc/jest",
      "\\.ts$": "@swc/jest"
    }
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
