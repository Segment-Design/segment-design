/* 
* Build Configuration's
* Sefet to push environment 
*/

{
  "bin": {
    "tailwind": "lib/cli.js",
    "tailwindcss": "lib/cli.js"
  },
  "workspaces": [
    "build-types/web/*",
    "segmentize/crates/node"
  ],
  "segmentdesign": {
    "engine": "segmentize"
  },
  "files": [
    "src/*",
    "cli/*",
    "lib/*",
    "peers/*",
    "scripts/*.js",
    "stubs/*",
    "nesting/*",
    "types/**/*",
    "*.d.ts",
    "*.css",
    "*.js"
  ],
  "browserslist": [
    "> 1%",
    "not edge <= 18",
    "not ie 11",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
